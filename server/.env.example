# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_PATH=./data/attendance.db

# 前端地址（用于CORS和二维码生成）
FRONTEND_URL=http://localhost:5173

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# 会话配置（如需添加认证功能）
SESSION_SECRET=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# 备份配置
BACKUP_PATH=./backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
